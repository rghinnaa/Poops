<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgpoops"
    android:orientation="vertical"
    tools:context=".KuisActivity">

    <LinearLayout
        android:id="@+id/linear1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="30dp">
    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:text="HOT Games"
        android:layout_gravity="center"
        android:textSize="18sp" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"/>

    <TextView
        android:id="@+id/textNumberQuestion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:textSize="14sp"
        android:layout_marginTop="5dp"
        android:text="Question 1 of 20"
        android:layout_gravity="center" />

    <TextView
        android:id="@+id/tampilsoal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:textSize="17sp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:padding="12dp"
        android:background="#2524ff7f"
        android:textStyle="bold"
        android:gravity="center"
        android:text="Inheritance dalam oop menggunakan keyword?" />

    </LinearLayout>

    <RelativeLayout
        android:layout_marginTop="30dp"
        android:id="@+id/rela"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_gravity="center">

        <Button
            android:id="@+id/jawA"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:background="#2524ff7f"
            android:text="choice A"
            android:textColor="#004c3f"/>

        <Button
            android:id="@+id/jawB"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:background="#2524ff7f"
            android:text="choice B"
            android:textColor="#004c3f"
            android:layout_toRightOf="@+id/jawA"/>

        <Button
            android:layout_marginTop="5dp"
            android:id="@+id/jawC"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:background="#2524ff7f"
            android:text="choice C"
            android:layout_below="@id/jawA"
            android:textColor="#004c3f"/>

        <Button
            android:layout_marginTop="5dp"
            android:id="@+id/jawD"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:background="#2524ff7f"
            android:text="choice D"
            android:textColor="#004c3f"
            android:layout_toRightOf="@+id/jawC"
            android:layout_below="@+id/jawB"/>

        <Button
            android:layout_below="@+id/jawC"
            android:id="@+id/enter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:width="314dp"
            android:background="#004c3f"
            android:text="Enter"
            android:textColor="#ffffff" />

    </RelativeLayout>
</LinearLayout>